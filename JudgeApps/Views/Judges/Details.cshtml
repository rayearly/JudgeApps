@model JudgeApps.ViewModel.JudgeBoothMarkViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<table>
    <tr>
        <td>Title: </td>
        <td>@Model.Judge.Title</td>
    </tr>
    <tr>
        <td>Name: </td>
        <td>@Model.Judge.Name</td>
    </tr>
    <tr>
        <td>Affiliation: </td>
        <td>@Model.Judge.Affiliation</td>
    </tr>
    <tr>
        <td>Booths Assigned: </td>
        <td>
            <ul>
                @if (Model.Judge.JudgeBoothMark == null)
                {
                    <li>@Html.ActionLink("Assign Booth", "BoothAssignment", "JudgeBoothMarks", new { id = Model.Judge.Id }, null)</li>
                }
                else
                {
                    foreach (var b in Model.Judge.JudgeBoothMark)
                    {
                        foreach (var bid in Model.Booths)
                        {
                            if (b.BoothId == bid.Id)
                            {
                                <li>@bid.BoothId</li>
                            }
                        }
                    }
                }
            </ul>
        </td>
    </tr>
</table>